{% extends 'base.html.twig' %}

{% block title %}Astre{% endblock %}

{% block body %}
    <h1>Astre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ astre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ astre.name }}</td>
            </tr>
            <tr>
                <th>Perihelion</th>
                <td>{{ astre.perihelion }}</td>
            </tr>
            <tr>
                <th>Mass</th>
                <td>{{ astre.mass }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ astre.volume }}</td>
            </tr>
            <tr>
                <th>DiscoveryDate</th>
                <td>{{ astre.discoveryDate ? astre.discoveryDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('astre_index') }}">Retour</a>
    <a href="{{ path('astre_detail', {'id': astre.id}) }}">Images</a>
    <a href="{{ path('astre_edit', {'id': astre.id}) }}">Modifier</a>

    {{ include('astre/_delete_form.html.twig') }}
{% endblock %}
